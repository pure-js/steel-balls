.nav
  background #fff
  margin 3px auto
  overflow hidden
  +m-min($md)
    float: left
  &:after
    position absolute
    opacity .5

  &-btn
    background none
    cursor pointer
    border none
    border-radius 3px
    padding 0
    &:focus
      outline none

    &__icon
      color #000
      font-size 34px

    &__text
      color #000
      font-size 34px
      pt-sans()
      padding 0 0 0 13px

  &__item
    pt-sans()
    color #000
    display block
    font-size 21px
    text-decoration none
    text-align center
    border-bottom 1px solid #111
    padding 15px 0 12px
    &:last-child
      border-bottom 0
    +m-min($md)
      float left
      padding 7px 10px 5px
      border none
      font-size 18px
      &:hover
        opacity .75
      &:first-child
        padding 7px 10px 5px 0
      &:last-child
        padding 7px 0 5px 10px

  &-container
    position absolute
    padding 1px 0 0 0
    z-index 1
    background #fff
    width 100%
    border-bottom: 3px solid rgba(0,0,0,0.2)
    overflow auto
    background-clip: padding-box
    +m-min($md)
      position relative
      border-bottom: none

  &-buttons
    overflow: hidden
    margin: 0 0 20px 0
    +m-min($md)
      margin: 0
      float: right

    &__button
      background: none
      color #000
      display: block
      float: left
      margin: 0 7px 0 0
      &:last-child
        margin: 0
